{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "planilla-app",
  "version": "0.1.0",
  "identifier": "com.tauri.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
  
    "windows": [
      {
        "title": "planilla-app",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
        
      }
    ],
  "security": {
    "csp": null
  }
},
  "plugins": {
    "sql": {
      "active": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
